<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="openmrs-archetype-module"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<requiredProperties>
		<requiredProperty key="module-name-no-spaces" />
		<requiredProperty key="module-name" />
		<requiredProperty key="module-description" />
		<requiredProperty key="module-author" />
		<requiredProperty key="adminLinkReply" />
		<requiredProperty key="serviceReply" />
		<requiredProperty key="dependencyManagement" />
		<requiredProperty key="openmrs-version" />
		<requiredProperty key="dependentModules" />
		<requiredProperty key="service-dao-name-no-spaces" />
		<requiredProperty key="service-dao-bean-id" />
		<requiredProperty key="object-name-no-spaces" />
	</requiredProperties>

	<modules>
		<module id="${rootArtifactId}" dir="api" name="${rootArtifactId}">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/test/java</directory>
					<includes>
						<include>**/*</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.xml</include>
						<include>**/*.properties</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>

		<module id="${rootArtifactId}" dir="omod" name="${rootArtifactId}">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/test/java</directory>
					<includes>
						<include>**/*</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/webapp</directory>
				</fileSet>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.xml</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
	</modules>
</archetype-descriptor>
